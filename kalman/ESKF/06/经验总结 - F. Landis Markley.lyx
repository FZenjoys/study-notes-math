\begin_inset Formula 
\begin{equation}
\mathrm{d}\hat{q}/\mathrm{d}t=\dfrac{1}{2}\left[\begin{array}{c}
\hat{\boldsymbol{\omega}}\\
0
\end{array}\right]\otimes\hat{q}\label{eq:29}
