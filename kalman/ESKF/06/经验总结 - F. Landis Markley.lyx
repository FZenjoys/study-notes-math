\begin{equation}
\left\Vert q\right\Vert {}^{2}=\left\Vert \bar{q}+\Delta q\right\Vert {}^{2}=\left\Vert \bar{q}\right\Vert {}^{2}+2\left(\Delta q\right)^{\mathrm{T}}\bar{q}+\left\Vert \Delta q\right\Vert {}^{2}=1\label{eq:32}
\end{equation}

\end_inset


\end_layout

