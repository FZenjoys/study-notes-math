\begin_inset Formula 
\begin{equation}
\left(\dfrac{x_{1}}{\sigma_{x_{1}}}\right)^{2}+\left(\dfrac{x_{2}}{\sigma_{x_{2}}}\right)^{2}+\cdots+\left(\dfrac{x_{n}}{\sigma_{x_{n}}}\right)^{2}=s\label{eq:2}
\end{equation}

\end_inset

