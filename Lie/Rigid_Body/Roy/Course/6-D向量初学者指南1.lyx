\begin_inset Formula 
\begin{equation}
^{B}\boldsymbol{X}_{A}^{*}=\left[\begin{array}{cc}
\boldsymbol{E} & \boldsymbol{0}\\
\boldsymbol{0} & \boldsymbol{E}
\end{array}\right]\left[\begin{array}{cc}
\boldsymbol{1} & -\boldsymbol{r}\times\\
\boldsymbol{0} & \boldsymbol{1}
\end{array}\right].\label{eq:12}
\end{equation}

\end_inset


\end_layout

