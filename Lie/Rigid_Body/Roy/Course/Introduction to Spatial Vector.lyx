\align center
\begin_inset Formula 
\[
\begin{array}{l|l}
\text{使用}\boldsymbol{S}\text{的相关方程式} & \text{使用}\boldsymbol{T}\text{的相关方程式}\\
\boldsymbol{v}=\boldsymbol{S}\boldsymbol{\alpha} & \boldsymbol{T}^{\mathrm{T}}\boldsymbol{v}=\boldsymbol{0}\\
\boldsymbol{a}=\boldsymbol{S}\dot{\boldsymbol{\alpha}}+\dot{\boldsymbol{S}}\boldsymbol{\alpha} & \boldsymbol{T}^{\mathrm{T}}\boldsymbol{a}+\dot{\boldsymbol{T}}^{\mathrm{T}}\boldsymbol{v}=\boldsymbol{0}\\
\boldsymbol{S}^{\mathrm{T}}\boldsymbol{f}_{c}=\boldsymbol{0} & \boldsymbol{f}_{c}=\boldsymbol{T}\lambda\\
\boldsymbol{f}+\boldsymbol{f}_{c}=\boldsymbol{I}\boldsymbol{a}+\boldsymbol{v}\times^{*}\boldsymbol{I}\boldsymbol{v} & \boldsymbol{f}+\boldsymbol{f}_{c}=\boldsymbol{I}\boldsymbol{a}+\boldsymbol{v}\times^{*}\boldsymbol{I}\boldsymbol{v}\\
