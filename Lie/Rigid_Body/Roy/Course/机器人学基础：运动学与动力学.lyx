\end{equation}

\end_inset

其中
\begin_inset Formula 
\[
\begin{aligned}\boldsymbol{U}_{i} & =\boldsymbol{I}_{i}^{A}\boldsymbol{\Phi}_{i},\\
\boldsymbol{D}_{i} & =\left(\boldsymbol{\Phi}_{i}^{\mathrm{T}}\boldsymbol{U}_{i}\right)^{-1}=\left(\boldsymbol{\Phi}_{i}^{\mathrm{T}}\boldsymbol{I}_{i}^{A}\boldsymbol{\Phi}_{i}\right)^{-1},\\
\boldsymbol{u}_{i} & =\boldsymbol{\tau}_{i}-\boldsymbol{U}_{i}^{\mathrm{T}}\boldsymbol{\zeta}_{i}-\boldsymbol{\Phi}_{i}^{\mathrm{T}}\mathbf{p}_{i}^{A}
\end{aligned}
\]

\end_inset

并且
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boldsymbol{\zeta}_{i}=\dot{\boldsymbol{\Phi}}_{i}\dot{\boldsymbol{q}}_{i}=\stackrel{\circ}{\boldsymbol{\Phi}}_{i}\dot{\boldsymbol{q}}_{i}+\mathbf{v}_{i}\times\boldsymbol{\Phi}_{i}\dot{\boldsymbol{q}}_{i}.
\]

