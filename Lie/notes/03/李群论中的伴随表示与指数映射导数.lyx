\begin_inset Formula 
\begin{align}
\mathrm{Exp}: & \mathbb{R}^{m}\rightarrow\mathcal{M}\quad;\quad\boldsymbol{\tau}\mapsto\mathcal{X}=\mathrm{Exp}(\boldsymbol{\tau})\label{eq:21}\\
\mathrm{Log}: & \mathcal{M}\rightarrow\mathbb{R}^{m}\quad;\quad\mathcal{X}\mapsto\boldsymbol{\tau}=\mathrm{Log}(\mathcal{X}).\label{eq:22}
