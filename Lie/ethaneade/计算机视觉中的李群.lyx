\begin_inset Formula 
\begin{align}
v & =\left(\begin{array}{c}
x\\
y\\
\theta\\
\lambda
\end{array}\right)\in\mathbb{R}^{4}\label{eq:59}\\
\mathbf{R} & \equiv\left(\begin{array}{cc}
